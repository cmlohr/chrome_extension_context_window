{
    "manifest_version": 2,
    "name": "OpenAI Token Counter",
    "version": "1.0",
    "description": "Counts tokens in an OpenAI chat session",
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": ["tabs", "http://*/*", "https://*/*"],
    "content_scripts": [{
        "matches": ["*://chat.openai.com/*"],
        "js": ["content.js"]
    }]
}
